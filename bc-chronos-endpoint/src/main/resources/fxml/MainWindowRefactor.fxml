<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<GridPane prefHeight="700.0" prefWidth="1000.0"
	xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="bc.bg.tools.chronos.endpoint.ui.main.MainViewController">
	<padding>
		<Insets top="5" right="5" bottom="5" left="5" />
	</padding>
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" percentWidth="-1" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints percentHeight="5" vgrow="SOMETIMES" />
		<RowConstraints percentHeight="90" vgrow="SOMETIMES" />
		<RowConstraints percentHeight="5" vgrow="SOMETIMES" />
	</rowConstraints>

	<MenuBar GridPane.columnIndex="0" GridPane.rowIndex="0">
		<menus>
			<Menu fx:id="menuFile" mnemonicParsing="false"
				text="%view.main.menu.file.title">
				<items>
					<MenuItem mnemonicParsing="false" text="Close" />
				</items>
			</Menu>
			<Menu mnemonicParsing="false" text="%view.main.menu.edit.title">
				<items>
					<MenuItem mnemonicParsing="false" text="Delete" />
				</items>
			</Menu>
			<Menu mnemonicParsing="false" text="%view.main.menu.view.title">
				<items>
					<MenuItem mnemonicParsing="false" text="Action 1" />
				</items>
			</Menu>
			<Menu mnemonicParsing="false" text="%view.main.menu.settings.title">
				<items>
					<MenuItem mnemonicParsing="false" text="Action 1" />
				</items>
			</Menu>
			<Menu mnemonicParsing="false" text="%view.main.menu.help.title">
				<items>
					<MenuItem mnemonicParsing="false" text="About" />
				</items>
			</Menu>
		</menus>
	</MenuBar>

	<TabPane tabClosingPolicy="UNAVAILABLE" GridPane.columnIndex="0"
		GridPane.rowIndex="1">
		<tabs>
			<Tab text="%view.main.tab.workspace.title">
				<content>
					<GridPane>
						<padding>
							<Insets top="5" right="5" bottom="5" left="5" />
						</padding>
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES"
								percentWidth="20" />
							<ColumnConstraints hgrow="SOMETIMES"
								percentWidth="80" />
						</columnConstraints>
						<rowConstraints>
							<RowConstraints percentHeight="10" vgrow="SOMETIMES" />
							<RowConstraints percentHeight="90" vgrow="SOMETIMES" />
						</rowConstraints>

						<Label contentDisplay="CENTER" text="%view.main.tab.workspace.user.label"
							textAlignment="CENTER" wrapText="true" GridPane.columnIndex="0"
							GridPane.rowIndex="0" />

						<!-- FlowPane maybe? -->
						<HBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
							<children>
								<ToolBar>
									<items>
										<Button mnemonicParsing="false" text="A1" />
										<Button mnemonicParsing="false" text="A2" />
										<Button mnemonicParsing="false" text="A3" />
									</items>
								</ToolBar>
								<DatePicker />
							</children>
						</HBox>

						<Accordion GridPane.columnIndex="0" GridPane.rowIndex="1">
							<panes>
								<TitledPane animated="false"
									text="%view.main.tab.workspace.entity.customer.title">
									<content>
										<AnchorPane>
											<children>
												<ScrollPane>
													<content>
														<TreeView fx:id="treeCustomers" showRoot="false" />
													</content>
												</ScrollPane>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
								<TitledPane animated="false"
									text="%view.main.tab.workspace.entity.project.title">
									<content>
										<AnchorPane>
											<children>
												<ScrollPane>
													<content>
														<TreeView fx:id="treeProjects" showRoot="false" />
													</content>
												</ScrollPane>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
								<TitledPane animated="false"
									text="%view.main.tab.workspace.entity.task.title">
									<content>
										<AnchorPane>
											<children>
												<ScrollPane>
													<content>
														<TreeView fx:id="treeTasks" showRoot="false" />
													</content>
												</ScrollPane>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
								<TitledPane animated="false"
									text="%view.main.tab.workspace.entity.role.title">
									<content>
										<AnchorPane>
											<children>
												<ScrollPane>
													<content>
														<TreeView fx:id="treeRoles" showRoot="false" />
													</content>
												</ScrollPane>
											</children>
										</AnchorPane>
									</content>
								</TitledPane>
							</panes>
						</Accordion>

						<GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
							<padding>
								<Insets top="5" right="5" bottom="5" left="5" />
							</padding>
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES"
									percentWidth="-1" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints percentHeight="50" vgrow="SOMETIMES" />
								<RowConstraints percentHeight="30" vgrow="SOMETIMES" />
								<RowConstraints percentHeight="20" vgrow="SOMETIMES" />
							</rowConstraints>

							<TableView GridPane.columnIndex="0" GridPane.rowIndex="0"
								tableMenuButtonVisible="true">

								<columns>
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.task" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.description" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.starttime" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.endtime" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.duration" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.timespent" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.performer" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.role" />
									<TableColumn editable="false" sortable="false"
										text="%view.main.tab.workspace.grid.col.rate" />
								</columns>
							</TableView>

							<VBox fx:id="stackEntityAttributes" GridPane.columnIndex="0"
								GridPane.rowIndex="1" />

							<ButtonBar GridPane.columnIndex="0" GridPane.rowIndex="2">
								<buttons>
									<Button disable="true" mnemonicParsing="false"
										text="%view.main.tab.workspace.perspective.tabular" />
									<Button mnemonicParsing="false"
										text="%view.main.tab.workspace.perspective.graphical" />
								</buttons>
							</ButtonBar>
						</GridPane>
					</GridPane>
				</content>
			</Tab>
			<Tab text="%view.main.tab.performers.title">
				<content>
				</content>
			</Tab>
			<Tab text="%view.main.tab.reporting.title">
				<content>
				</content>
			</Tab>
			<Tab text="%view.main.tab.statistics.title">
				<content>
				</content>
			</Tab>
			<Tab text="%view.main.tab.synchronization.title">
				<content>
				</content>
			</Tab>
		</tabs>
	</TabPane>

	<!-- FlowPane maybe? -->
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="2">
		<children>
			<Label contentDisplay="CENTER" text="%view.main.credits.label"
				HBox.hgrow="SOMETIMES" />
		</children>
	</HBox>
</GridPane>