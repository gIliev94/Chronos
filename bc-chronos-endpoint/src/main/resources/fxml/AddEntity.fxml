				<ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
				<ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints percentHeight="-1" vgrow="ALWAYS" />
			</rowConstraints>

