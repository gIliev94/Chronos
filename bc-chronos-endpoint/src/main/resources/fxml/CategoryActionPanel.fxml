<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="actionButtonBar" alignment="TOP_CENTER" fillWidth="true"
	spacing="15" stylesheets="@../css/dark.css" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="bc.bg.tools.chronos.endpoint.ui.main.CategoryActionPanelController">
	<children>
		<Button fx:id="btnRefreshCategory" mnemonicParsing="false"
			styleClass="action-button">
			<graphic>
				<ImageView fitHeight="50.0" preserveRatio="true">
					<image>
						<Image url="@../images/refresh_icon.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>

		<Button fx:id="btnAddCategory" mnemonicParsing="false"
			styleClass="action-button">
			<graphic>
				<ImageView fitHeight="50.0" preserveRatio="true">
					<image>
						<Image url="@../images/edit_icon.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>

		<Button fx:id="btnEditCategory" mnemonicParsing="false"
			styleClass="action-button">
			<graphic>
				<ImageView fitHeight="50.0" preserveRatio="true">
					<image>
						<Image url="@../images/edit_icon.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>

		<Button fx:id="btnRemoveCategory" mnemonicParsing="false"
			styleClass="action-button">
			<graphic>
				<ImageView fitHeight="50.0" preserveRatio="true">
					<image>
						<Image url="@../images/delete_icon.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
	</children>
</VBox>
